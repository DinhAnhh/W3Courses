@model WebLibrary.Models.Answer
@{
    ViewBag.Title = "Create Answer";
   Layout = "~/Views/Shared/_LayoutCourse.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/fonts/boxicons.css" />

<form asp-action="Create" asp-route-courseId="@ViewBag.CourseId">
    <input asp-for="AnswerId" type="hidden" class="form-control" style="width: 25%;" />
       <div class="mb-3 col-md-6">
                        <div class="form-group">
                            <label asp-for="Answer1" class="text-theme font-weight-bold"></label>
                            <input asp-for="Answer1" class="form-control" style="width: 80%;"  required />
                            <span asp-validation-for="Answer1" class="text-danger"></span>
                        </div>
                    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index", "Answer", new { courseId = ViewBag.CourseId })" class="btn btn-secondary">Back</a>
</form>

@{
    var errorMessage = ViewBag.Message as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}