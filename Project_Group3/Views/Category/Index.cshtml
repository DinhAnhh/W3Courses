@model IEnumerable<WebLibrary.Models.Category>;

@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="~/fonts/boxicons.css" />
<a class="btn btn-success mb-2" asp-action="Create">Add new Category</a>
<div class="card bg-theme p-0 mt-2 mb-5" >
    <div class="container no-footer mt-5 mb-3 p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>CategoryId</th>
                    <th>CategoryName</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>@category.Description</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.CategoryId">
                                <i class='bx bxs-trash-alt'></i>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">
                                <i class='bx bxs-trash-alt'></i>
                            </a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }